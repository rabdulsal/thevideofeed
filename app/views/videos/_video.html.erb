<div class='video'>
  <%= link_to video_embed(video), class: 'fancybox iframe' do %>
    <%= image_tag video.thumbnail_url %>

    <div class="overlay">
      <div class="overlay_copy">
        <p>first fed from</p>
        <p class= "overlay_user">
          <%= video.first_person.name %>
          <%= "<br> at #{number_with_delimiter(video.views)} views".html_safe if video.views %>
        <p>
      </div><!-- overlay_copy -->
    </div><!-- overlay -->

    <div class="video_title">
      <p><%= video.title %><p>
    </div><!-- video_title -->
  <% end %>
</div><!-- video -->
